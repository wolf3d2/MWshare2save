<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    >

<ScrollView
    android:id="@+id/main_scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

<TextView
    android:id="@+id/main_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:text="@string/description" 
    />

<TextView
    android:id="@+id/main_read_more"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="@string/read_more1"
    android:textColor="#f00" />

<TextView
    android:id="@+id/main_fname_txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:text="@string/filename"
    android:textSize="20sp" 
    />

<TextView
    android:id="@+id/main_fname_txt_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:text="@string/filename_desc"
    />

<EditText
    android:id="@+id/main_fname"
    style="@style/textEdit"
    android:maxLines="5"
    android:minLines="5"
	>
    </EditText>

<Button
    android:id="@+id/main_save_query"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:text="@string/save_query" />


<CheckBox
    android:id="@+id/cb_where_record"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp" 
    android:text="@string/pref_where_append_record"
    />

<TextView
    android:id="@+id/set_record_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingTop="15dp"
    android:paddingRight="5dp"
    android:textSize="20sp" 
    android:text="@string/set_record"
    />

<CheckBox
    android:id="@+id/cb_record_date1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:textSize="14sp" 
    android:text="@string/set_record_date1"
    />

<TextView
    android:id="@+id/set_record_separator_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/set_record_line_separator"
    />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp" >

<CheckBox
    android:id="@+id/cb_record_separator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:textSize="20sp" 
    />

<EditText
    android:id="@+id/main__record_separator"
    style="@style/textEdit"
    android:layout_toRightOf ="@+id/cb_record_separator"
    android:maxLines="1"
    android:minLines="1"
    >
    </EditText>

</RelativeLayout>

<Button
    android:id="@+id/main_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    android:text="@string/save" />

</LinearLayout>
</ScrollView>
</RelativeLayout>
