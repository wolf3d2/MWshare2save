<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<TextView
    android:id="@+id/main_vers"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
    android:gravity="left"
    android:text="ver"
    android:textColor="#00f" 
    />

<ScrollView
    android:id="@+id/main_scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/main_vers" 
    >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

<TextView
    android:id="@+id/main_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:text="@string/description" 
    />

<TextView
    android:id="@+id/main_read_more"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="@string/read_more1"
    android:textColor="#f00" />

<TextView
    android:id="@+id/main_fname_txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingLeft="5dp" 
    android:paddingRight="5dp" 
    android:text="@string/filename" 
    />

<EditText
    android:id="@+id/main_fname"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f99"
    android:inputType="textMultiLine"
    android:minLines="1"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" 
    android:textCursorDrawable="@null" >

    </EditText>

<Button
    android:id="@+id/main_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    android:text="@string/save" />

